	{{/if}}
</div>

<div class="clear"></div>

{{#if mount}}
	<div style="text-align:center; class="grid-100 tablet-grid-100 mobile-grid-100"><div _id="mount" class="gearImageContainer cursor  qsicons {{mount.className}}"></div></div>
{{else}}
	<div style="text-align:center; class="grid-100 tablet-grid-100 mobile-grid-100"><div class="cursor qsicons frame gearImageContainer"><div style="line-height:48px; font-size:x-small;" class="">mount</div></div></div>
	<h5 style="text-align:center;">Visit the <a class="market">market</a> to get a mount</h5>
{{/if}}






