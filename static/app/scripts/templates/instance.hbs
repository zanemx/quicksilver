<br>

<h5>{{this.prettyName}}</h5>
<div class="">{{prettyDifficulty}}</div>

{{!-- progress --}}
<div class="mobile-grid-100 tablet-grid-100 grid-100">
	<div class="progress-bar" style="max-width:200px;">
		<div id="dungeonProgressFill" class="progress-bar-fill"></div>
		<div class="progress-bar-label">Dungeon Progress</div>
	</div>
	<br>
</div>

<div class="mobile-grid-45 tablet-grid-45 grid-45">
	<div style="position:relative;" class="party">
		<div style='position:relative;margin-bottom:-3px;'><div class="hero npcs {{this.me.className}}_medium_landscape"><h6 style="background:rgba(0,0,0,0.5); font-size:xx-small;font-family:Verdana;">{{me.name}}</h6></div></div>
		
		{{!-- party members --}}
		{{#each party}}
			<div style='position:relative;margin-bottom:-3px;'><div class="hero npcs {{className}}_medium_landscape"><h6 style="background:rgba(0,0,0,0.5); font-size:xx-small;font-family:Verdana;">{{name}}</h6></div></div>
		{{/each}}

		<div class="progress-bar" style="max-width:200px; width:98px;"><div id="heroLifeBar" class="progress-bar-fill"></div><div class="progress-bar-label"><div class="stat">hp <span id="hero_hp"></span></div></div></div>
	</div>
	<div class="smallCornerFrames"></div>
	<div class="mobile-grid-100 tablet-grid-100 grid-100">
</div>

</div>
<div class="mobile-grid-10 tablet-grid-10 grid-10"><h5 style="margin-top:30px; font-size:xx-large;">vs</h5></div>


{{!-- mob stats  --}}
<h6 id='mobName'></h6>

<div class="mobile-grid-45 tablet-grid-45 grid-45">
	<div class="mob monstersContainer {{mob.grade}}-glow">
		<div class="monstersContainerInner">
			{{#each this.progression}}
					<div class="monsters {{className}}"></div>
					{{!-- <div>
						<div class="stat">defense {{defense}}</div>
						<div class="stat">strength {{strength}}</div>
						<div class="stat">intelligence {{intelligence}}</div>
						<div class="stat">stamina {{endurance}}</div>
					</div> --}}
			{{/each}}
		</div>
		<div style="position:absolute;top:0;left:0;" class="smallCornerFrames"></div>
		
	</div>
	<div class="progress-bar" style="max-width:200px; width:120px;"><div id="mobLifeBar" class="progress-bar-fill"></div><div class="progress-bar-label"><div class="stat">hp <span id="mob_hp">{{mob.max_hp}}</span></div></div></div>
</div>

<div class="clear"></div>
<br>
<button style="max-width:150px;" class="mobile-grid-100 tablet-grid-100 grid-100" id="instanceViewBack">Back</button>
<button style="max-width:150px;" class="mobile-grid-100 tablet-grid-100 grid-100" id="instanceViewStep">Fight</button>
<button style="max-width:150px;margin:auto;" class="mobile-grid-100 tablet-grid-100 grid-100 invisible" id="instanceViewComplete">Complete</button>
